<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDDDDD"
    tools:context="com.guineatech.CareC.Sign_Rerister"

    >

    <TextView
        android:id="@+id/textBt_Sign"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_below="@id/logomian"
        android:layout_centerHorizontal="true"

        android:text="Sign In"
        android:textColor="#000000"
        android:textSize="32dp" />

    <Button
        android:id="@+id/bt_Ris"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textBt_Sign"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Ris"
        android:textSize="32dp" />

    <ImageView
        android:id="@+id/logomian"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="120dp"
        app:srcCompat="@color/button_default" />

    <TextView
        android:id="@+id/tv_confrim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/bt_Ris"
        android:layout_below="@+id/bt_Ris"
        android:text="Confrim Sign up"
        android:textSize="16dp" />

</RelativeLayout>
